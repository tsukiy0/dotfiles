#! /bin/bash

set -euxo pipefail

# pacman
sudo pacman -Sy --noconfirm git \
    base-devel \
    stow \
    vim \
    tmux \
    zsh \
    zip \
    caffeine \
    docker \
    docker-compose \
    alacritty \
    chromium \
    go \
    yay \
    aws-cli \
    jdk-openjdk \
    gradle \
    intellij-idea-community-edition \
    dotnet-sdk

# aur
yay -Sy --noconfirm antigen-git \
    gopro-tools-git \
    nvm \
    visual-studio-code-bin

# java
sudo archlinux-java set java-13-openjdk
curl -s "https://get.sdkman.io" | bash
sdk install micronaut

